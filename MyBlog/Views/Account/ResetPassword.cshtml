@model MyBlog.Models.Account.ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset password";
}

<h2>@ViewData["Title"]</h2>
<h4>Reset your password.</h4>
<hr />
<form asp-controller="Account" asp-action="ResetPassword" role="form" method="post">
    <input asp-for="Code" type="hidden" />
    <div class="form-group">
        <label asp-for="Email">Email</label> <br />
        <span asp-validation-for="Email" ></span>
        <input asp-for="Email" class="form-control" />        
    </div>
    <div class="form-group">
        <label asp-for="Password">Password</label> <br />
        <span asp-validation-for="Password"></span>
        <input asp-for="Password" class="form-control" />        
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword">Confirm Password</label> <br />
        <span asp-validation-for="ConfirmPassword"></span>
        <input asp-for="ConfirmPassword" class="form-control" />
     </div>
    <button type="submit" class="btn btn-primary">Reset</button>
</form>



