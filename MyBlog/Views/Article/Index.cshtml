@model MyBlog.Models.ArticleModels.Article
@{
    ViewData["Title"] = "Index";
}
<article class="article">
    <h2>@Model.Title</h2>
    <div>
        <em class="text-muted">Date: @Model.Date</em>
    </div>
    <img class="" alt="Alternate Text" src="data:image/jpeg;base64,@(Convert.ToBase64String(@Model.Photo))" />
    <div></div>
    <p class="article-text">@Model.Text</p>
    @if (User.IsInRole("admin"))
    {
        <a class="btn btn-danger" asp-action="Delete" asp-controller="Article" asp-route-id="@Model.Id">Delete</a>
        <a class="btn btn-warning" asp-action="Edit" asp-controller="Article" asp-route-id="@Model.Id">Edit</a>
    }
</article>


