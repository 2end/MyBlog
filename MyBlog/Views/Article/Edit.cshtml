@model MyBlog.Models.ArticleModels.Article
@{
    ViewData["Title"] = "Edit";
}

<h2>Edit Article</h2>
<form role="form" asp-controller="Article" asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Date" value="@Model.Date" />
    <input type="hidden" asp-for="Photo" value="@(Convert.ToBase64String(Model.Photo))" />
    <div class="form-group">
        <label asp-for="Title">Title</label> <br />
        <span asp-validation-for="Title"></span>
        <input class="form-control" asp-for="Title" />
    </div>
    <div class="form-group">
        <label asp-for="Text">Text</label> <br />
        <span asp-validation-for="Text"></span>
        <textarea class="form-control" rows="15" maxlength="5000" asp-for="Text"></textarea>
    </div>
    <div class="form-group">
        <span asp-validation-for="FormFile"></span>
        <input type="file" asp-for="FormFile" title="download new picture..." />
    </div>
    <button class="btn btn-primary" type="submit">Edit</button>
</form>
@section Scripts{
    <script src="~/js/bootstrap.file-input.js"></script>
    <script>
        $('input[type=file]').bootstrapFileInput();
        $('.file-inputs').bootstrapFileInput();
    </script>
}

