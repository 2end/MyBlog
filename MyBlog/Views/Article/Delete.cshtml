@model MyBlog.Models.ArticleModels.Article
@{
    ViewData["Title"] = "Delete Article";
}

<h2>Delete Article</h2>
<div>
    <article class="article">
        <h2>@Model.Title</h2>
        <div>
            <em class="text-muted">Date: @Model.Date</em>
        </div>
        <img class="" alt="Alternate Text" src="data:image/jpeg;base64,@(Convert.ToBase64String(@Model.Photo))" />
        <div></div>
        <p class="article-text">@Model.Text</p>
    </article>
</div>
<form role="form" asp-controller="Article" asp-action="Delete" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Confirm Delete" />
    </div>
</form>