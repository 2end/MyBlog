@model MyBlog.Models.ArticleModels.Article
@{
    ViewData["Title"] = "Delete Article";
}

<h2>Delete Article</h2>
<div>
    <h2>@Model.Title</h2>
    <p>@Model.Text</p>
    <img alt="Alternate Text" style="width:200px;" src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.Photo))" />
    <p>@Model.Date</p>
</div>
<form role="form" asp-controller="Article" asp-action="Delete" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Confirm Delete" />
    </div>
</form>